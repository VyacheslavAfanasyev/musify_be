{
  "name": "music-app-backend",
  "private": true,
  "workspaces": [
    "microservices/*",
    "shared/*"
  ],
  "scripts": {
    "start:all": "docker-compose up --build",
    "dev:all": "concurrently \"npm run dev --workspace=auth-service\" \"npm run dev --workspace=media-service\" \"npm run dev --workspace=template\"",
    "build:all": "npm run build --workspaces",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "concurrently": "^8.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "microservices/**/*.{ts,js}": [
      "node scripts/lint-staged.js"
    ],
    "shared/**/*.{ts,js}": [
      "node scripts/lint-staged.js"
    ]
  }
}
